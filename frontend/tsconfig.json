{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode — Vite handles module resolution, not tsc */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* React JSX transform — no need to import React in every file */
    "jsx": "react-jsx",

    /* Strict type checking — catches real bugs at compile time */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // Makes vitest globals (describe, it, expect, vi) available without imports
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src"]
}
